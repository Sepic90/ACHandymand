rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Employees collection - only authenticated users can read/write
    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    // Absences collection - only authenticated users can read/write
    match /absences/{absenceId} {
      allow read, write: if request.auth != null;
    }
    
    // Overtime collection - only authenticated users can read/write
    match /overtime/{overtimeId} {
      allow read, write: if request.auth != null;
    }
    
    // Projects collection - only authenticated users can read/write
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // Time entries collection - only authenticated users can read/write
    match /timeEntries/{entryId} {
      allow read, write: if request.auth != null;
    }
    
    // Files collection - only authenticated users can read/write
    match /files/{fileId} {
      allow read, write: if request.auth != null;
    }
    
    // Project counter - only authenticated users can read/write
    match /projectCounter/{year} {
      allow read, write: if request.auth != null;
    }
    
    // Suppliers collection - only authenticated users can read/write
    match /suppliers/{supplierId} {
      allow read, write: if request.auth != null;
    }
    
    // Materials catalog collection - only authenticated users can read/write
    match /materials/{materialId} {
      allow read, write: if request.auth != null;
    }
    
    // Material purchases collection - only authenticated users can read/write
    match /materialPurchases/{purchaseId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
